<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/trailer_item_iv_play_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/content_description_play_button"
        android:src="@drawable/ic_play_circle_outline_blue_24dp" />

    <TextView
        android:id="@+id/trailer_item_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_gravity="center_horizontal"
        android:hint="@string/hint_trailer_title"
        android:textSize="20sp"/>

</LinearLayout>